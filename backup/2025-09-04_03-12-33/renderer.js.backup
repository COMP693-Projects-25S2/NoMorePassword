function createHistoryTab() {
    window.electronAPI.createHistoryTab().then(({ id, title }) => {
        const tabEl = document.createElement('div');
        tabEl.className = 'tab history-tab'; // æ·»åŠ ç‰¹æ®Šæ ·å¼ç±»
        tabEl.dataset.id = id;

